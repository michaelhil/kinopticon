{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@core/*": ["simulation/src/core/*"],
      "@types/*": ["simulation/src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "simulation/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "debug"
  ]
}