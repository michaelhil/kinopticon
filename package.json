{
  "name": "@kinopticon/root",
  "version": "0.1.0",
  "description": "Research-grade driving simulator with human factors focus",
  "type": "module",
  "private": true,
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "bun run simulation/src/index.ts",
    "build": "bun run build:simulation && bun run build:unreal",
    "build:simulation": "cd simulation && bun run build",
    "build:unreal": "echo 'Building Unreal project...' && cd unreal && echo 'UE build integration pending'",
    "test": "bun test",
    "test:unit": "bun test --testNamePattern='unit'",
    "test:integration": "bun test --testNamePattern='integration'",
    "test:performance": "bun test --testNamePattern='performance'",
    "test:architecture": "bun run tools/validate-architecture.ts",
    "lint": "eslint simulation/src --ext .ts",
    "lint:fix": "eslint simulation/src --ext .ts --fix",
    "typecheck": "bun run typecheck:simulation && bun run typecheck:tools",
    "typecheck:simulation": "cd simulation && bun run typecheck",
    "typecheck:tools": "cd tools && bun run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf simulation/dist tools/dist",
    "setup": "bun install && bun run setup:git-hooks && bun run typecheck",
    "setup:git-hooks": "bun run scripts/setup-git-hooks.ts",
    "validate:no-js": "! find . -name '*.js' -not -path './node_modules/*' -not -path './*.config.js' | grep -q .",
    "docs": "bun run docs:generate",
    "docs:generate": "typedoc simulation/src --out docs/api"
  },
  "workspaces": [
    "simulation",
    "tools"
  ],
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[org]/kinopticon.git"
  },
  "keywords": [
    "driving-simulator",
    "human-factors",
    "research",
    "typescript",
    "unreal-engine"
  ],
  "license": "PROPRIETARY",
  "author": "Human Factors Research Team"
}